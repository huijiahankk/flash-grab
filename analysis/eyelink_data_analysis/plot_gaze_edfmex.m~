% addpath('/Users/huijiajia/Documents/Psychtoolbox-3-3.0.17.9/Psychtoolbox/PsychHardware/EyelinkToolbox');
% Read the EyeLink ASCII data file
cd(datapath);
dataFile = 'hjh_vi2invi_u_2023_03_08_15_48.edf';
edfStruct = edfmex(dataFile);
edfTable.FEVENT = struct2table(edfStruct.FEVENT);

xCenter = 1280;
yCenter = 720;

index_trial_flash = find(strcmp(edfTable.FEVENT.message,'flash'));
index_trial_number = find(strcmp(edfTable.FEVENT.message,'TRIAL 1'));
index_block_number = find(strcmp(edfTable.FEVENT.message,'BLOCK 1'));

trialOnset.x = [];
trialOnset.y = [];

for i = 1:length(index_trial)
    trialOnset.x(:,i) = edfTable.FEVENT.gstx(index_trial(i) : index_trial(i) + 20);
    trialOnset.y(:,i) = edfTable.FEVENT.gsty(index_trial(i) : index_trial(i) + 20);
    plot(nonzeros(trialOnset.x(:,i)), nonzeros(trialOnset.y(:,i)));
    hold on;
end

 
